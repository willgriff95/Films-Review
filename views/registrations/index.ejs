<div class="backgroundSignIn">
</div>
  <% if(messages.danger){ %>
    <div class="col s12 l12">
      <div class="card red lighten-3">
        <div class="card-content red-text">
          <span class="card-title"><%= messages.danger %></span>
        </div>
      </div>
    </div>
  <% } %>

  <div class="containerSignUp z-depth-3">
  <h2>SIGN UP</h2>
  <form class="col l12" action="/signup" method="post">
    <div class="inputheight input-field col l12 ">
      <input type="text" name="username" id="username_field">
      <label for="username_field">Username</label>
    </div>
    <div class="inputheight input-field col l12 ">
      <input type="email" name="email" id="email_field" required>
      <label for="email_field">Email</label>
    </div>
    <div class="inputheight input-field col l12 ">
      <input type="url" name="photo" id="photo_field" >
      <label for="photo_field">Profile Picture</label>
    </div>
    <div class="inputheight input-field col l12 ">
      <input type="password" name="password" id="password_field" required>
      <label for="password_field">Password</label>
    </div>
    <div class="inputheight input-field col l12 ">
      <input type="password" name="passwordConfirmation" id="password_confirmation_field" required>
      <label for="password_confirmation_field">Password Confirmation</label>
    </div>

    <div class="signupheight input-field col l12">
      <button class="blueButton btn">Sign Up</button>
      <a class="right" href="/signin">Sign in here.</a>
      <div class="right newRevu">Already a member?</div>
    </div>
  </form>

</div>
