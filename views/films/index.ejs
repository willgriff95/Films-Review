<div class="row">
  <% if(locals.isLoggedIn) { %>
  <div class="col s1" style="padding-left: 0 !important;"></div>
  <% } %>
  <% if(locals.isLoggedIn) { %>
  <div class="col s11">
  <% } else { %>
  <div class="col s12">
  <% } %>
      <div class="margins">
      <% films.forEach(film => { %>
        <% if(locals.isLoggedIn) { %>
        <div class="col s8 m2 filmWidth">
            <a href="/films/<%= film._id %>">
          <% } else { %>
        <div class="col s8 m2 filmWidth" style="padding: 10px 10px 10px 10px !important;">
            <a href="/signup">
          <% } %>
            <div class="  z-depth-3 card-image" style="background-image: linear-gradient(rgba(0,0,0,0), #1F1F1F), url(<%= film.photo %>); background-repeat: no-repeat; background-position: center; background-size: cover;" >
            <div class="card-image">
            <div class="valign-wrapper rating"><%= film.rating %>
              <% /* %> <div class="outOf10">/ 10</div> <% */ %>
            </div>
            </div>
            <div class="title" ><%= film.title %></div>
            <div class="genre" ><%= film.genre %></div>
            </div>
            <a/>
        </div>
      <% }) %>
      <% if(locals.isLoggedIn) { %>
      <div class="col s12 m2 filmWidth">
        <a href="/films/new">
        <div class="addFilm z-depth-3 card-image" href="/films/new" style="background-image: linear-gradient(rgba(0,0,0,0), #1F1F1F);">
          <a href="/films/new" >
          <div class="card-image">
          <div class="valign-wrapper rating">
          <i class="material-icons">add</i>
          </div>
          </div>
            <div class="buttoncontainer" href="/films/new">
                <div class="bg" href="/films/new"></div>
                <div class="button">

                </div>
          </div>
        </a>
      </div>
    </a>
    <a class="btn-floating btn-large waves-effect waves-light blueButton addFilmButton" href="/films/new"><i class="material-icons">add</i></a>
    <% } %>
    </div>
  </div>
</div>
