<div class="row">
  <h2><%= film.title %></h2>
    <div class="col s12 m4 filmWidth">
        <div class="z-depth-3 card-image" style="width: 250px;background-image: url(<%= film.photo %>); background-repeat: no-repeat; background-position: center; background-size: cover;" >
        </div>
        <div class="black-text" style="padding: 15px;">
        </div>
    </div>
</div>
<form method="POST" action="/films/<%= film._id %>">
<div class="fixed-action-btn">
  <a class="btn-floating btn-large green">
    <i class="large material-icons">more_horiz</i>
  </a>
  <ul>
      <input type="hidden" name="_method" value="delete">
    <li><a class="btn-floating red"><button class="btn-floating red"><i class="material-icons">delete</i></button></a></li>
    <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
    <li><a href="/films/<%= film._id %>/edit" class="btn-floating blue"><i class="material-icons">mode_edit</i></a></li>
  </ul>
</div>
</form>
